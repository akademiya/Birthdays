<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="8dp">

        <ImageView
            android:id="@+id/upload_img_person"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_margin="16dp"
            android:src="@drawable/ic_person" />

        <Button
            android:id="@+id/btn_select_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@+id/upload_img_person"
            android:background="@color/text_disabled_dark"
            android:drawableStart="@drawable/ic_take_photo"
            android:text="@string/select_photo" />

        <EditText
            android:id="@+id/create_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/upload_img_person"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:hint="First name"
            android:inputType="textCapWords" />

        <EditText
            android:id="@+id/create_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/create_first_name"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:hint="Last name"
            android:inputType="textCapWords" />

        <Button
            android:id="@+id/create_birth_of_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/create_last_name"
            android:layout_marginStart="@dimen/edge_margins"
            android:layout_marginEnd="@dimen/edge_margins"
            android:layout_marginBottom="8dp"
            android:background="@color/text_disabled_dark"
            android:padding="14dp"
            android:text="Date of birthday" />

        <Spinner
            android:id="@+id/create_group"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/create_birth_of_date"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:paddingStart="-1dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp" />

        <Spinner
            android:id="@+id/create_gender"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/create_group"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:paddingStart="-1dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/create_gender"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="24dp">

            <Button
                android:id="@+id/cansel_button"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:text="Cansel" />

            <Button
                android:id="@+id/save_button"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1.5"
                android:text="Save" />

        </LinearLayout>
    </RelativeLayout>
</ScrollView>