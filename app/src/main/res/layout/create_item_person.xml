<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingTop="8dp">

    <ImageView
        android:id="@+id/create_img_person"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_person" />

    <Button
        android:id="@+id/btn_select_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@+id/create_img_person"
        android:background="@color/text_disabled_dark"
        android:drawableStart="@drawable/ic_take_photo"
        android:text="@string/select_photo" />

    <EditText
        android:id="@+id/create_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_img_person"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:hint="first name"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/create_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_first_name"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:hint="last name"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/create_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_last_name"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:hint="age"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/create_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_age"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:hint="group"
        android:inputType="textMultiLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_group"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp">

        <Button
            android:id="@+id/start"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:layout_marginEnd="5dp"
            android:text="Cansel" />

        <Button
            android:id="@+id/stop"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="60dp"
            android:layout_marginStart="5dp"
            android:text="Save" />

    </LinearLayout>

</RelativeLayout>